<%= form_for(@wiki) do |f| %>
  <% if @wiki.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wiki.errors.count, "error") %> prohibited this wiki from being saved:</h2>

      <ul>
      <% @wiki.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %></br >
  <%= f.text_field :title, placeholder: "Enter title" %></br >

  <%= f.label :body %></br >
  <%= f.text_area :body, placeholder: "Enter body" %></br >

  <% if current_user.role == 'admin' || current_user.role == 'premium' %>
      <%= f.label :private do %>
      <%= f.check_box :private %> Private wiki
      <% end %>
  <% end %>
  
  <%= f.submit "Save" %>
<% end %>